@using PagedList.Mvc
@model PagedList.IPagedList<Mardom.Models.Articulo>
@{
    ViewBag.Title = "Articulos";
}

<h2>Productos</h2>


<table class="table">

    <thead>
        <tr>
            <th>Descripción</th>
            <th style="width:200px">Categoria</th>
            <th style="width:200px">Precio de venta</th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Descripcion)</td>
                <td>@(m.Categoria.Descripcion)</td>
                <td>@(m.PrecioVenta1)</td>
                <td>
                    <a class="btn btn-xs btn-default" href="~/Articulo/ver/@m.Id">Ver</a>
                    <a class="btn btn-xs btn-primary" href="~/Articulo/crud/@m.Id">Editar</a>
                    <a onclick="return confirm('¿Desea eliminar el registro?');" class="btn btn-xs btn-danger" href="~/Articulo/eliminar/@m.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<div style="margin-left: 20px">
    <p></p>
    <p></p>
    <div class="pagination-sm" style="margin-left: 400px">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>