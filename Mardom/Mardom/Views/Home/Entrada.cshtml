@model Mardom.Models.Almacen_Articulo
@{
    ViewBag.Title = (Model.Articulo.Descripcion);

}

<ol class="breadcrumb">
    <li><a href="~/Home/Articulos/@(Model.Articulo.Id)">Articulos</a></li>
    <li>/ @(Model.Articulo.Descripcion)</li>
</ol>

@using (Html.BeginForm("Entrar", "Home", FormMethod.Post, new { id = "frm-marca" }))
{

    @Html.HiddenFor(x => x.ArticuloId);
    @Html.HiddenFor(x => x.AlmacenId);

    <div class="panel panel-default">
        <div class="panel-heading">Información del articulo</div>
        <div class="panel-body">
            <div class="col-lg-6 col-md-6 col-xs-6">
                <div class="form-group">
                    <dl>
                        <dt>Articulo:</dt>
                        <dd>@(Model.Articulo.Descripcion)</dd>
                    </dl>
                </div>
                <div class="form-group">
                    <dl>
                        <dt>Almacen:</dt>
                        <dd>@(Model.Almacen.Descripcion)</dd>
                    </dl>
                </div>
                <div class="form-group">
                    @Html.Label("Cantidad")
                    @Html.TextBoxFor(x => x.Cantidad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Cantidad, null, new { @class = "label label-danger" })
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </div>
        </div>
    </div>
}