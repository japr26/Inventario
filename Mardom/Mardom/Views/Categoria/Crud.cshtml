@model Mardom.Models.Categoria
@{
    ViewBag.Title = (Model.Id > 0 ? Model.Descripcion : "Nuevo Registro");

}

<ol class="breadcrumb">
    <li><a href="~/Categoria">Categoria</a></li>
    <li class="active">/ @(Model.Id > 0 ? Model.Descripcion : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar", "Categoria", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="panel panel-default">
        <div class="panel-heading">Información de categoría</div>
        <div class="panel-body">
            <div class="col-lg-6 col-md-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Categoria")
                    @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "label label-danger" })
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

}